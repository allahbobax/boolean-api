# Database
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# JWT Secret (минимум 32 символа)
JWT_SECRET=your-very-long-random-secret-key-here-min-32-chars

# Redis для Rate Limiting
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# Email сервис (Resend)
RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_EMAIL=noreply@booleanclient.ru

# Cloudflare Turnstile
TURNSTILE_SECRET_KEY=your-turnstile-secret-key

# API Keys
ADMIN_API_KEY=your-admin-api-key
INTERNAL_API_KEY=your-internal-api-key
STATUS_PAGE_API_KEY=your-status-page-api-key

# OAuth провайдеры (опционально)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
YANDEX_CLIENT_ID=your-yandex-client-id
YANDEX_CLIENT_SECRET=your-yandex-client-secret

# Frontend URL
FRONTEND_URL=https://booleanclient.ru

# Node Environment
NODE_ENV=production
